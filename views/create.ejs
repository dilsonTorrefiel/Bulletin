<!DOCTYPE html>
<%- include('header')%>

  <body>
    <div class="container _container">
      <div class="col-lg-12">
        <h2 id="_fbook" class="lead _myNote">Create New Article</h2>
        <div class="card py-2 my-2 _right">
          <div class="card-block">
            <!-- <h2 class="text-center display-4 _myNote-login">Create Account</h2> -->
            <form class="form" action="/addNewArticle" method="POST">

              <div class="form-group justify-content-left">
                <label class="lead" for="articleTitle">Article Title</label>
                <input required name="title" type="title" class="form-control form-control-lg" id="inputTitle"
                  aria-describedby="titleHelp" placeholder="Title" required>
              </div>

              <div class="form-group justify-content-left">
                <label class="lead" for="articleContent">Article Content</label>
                <input required name="content" type="content" class="form-control form-control-lg" id="inputContent"
                  aria-describedby="contentHelp" placeholder="Content" required>
              </div>

              <div class="form-group justify-content-left">
                <label class="lead" for="articleDateCreated">Date Created</label>
                <input required name="dateCreated" type="dateCreated" class="form-control form-control-lg"
                  id="inputDateCreated" aria-describedby="dateCreatedHelp" placeholder="dateCreated" required>
              </div>

              <div class="row">
                <div class="col-md-6">
                  <a class=" btn btn-lg btn-block btn-secondary" style="padding-top:12px; margin:5px;" href="/"
                    role="button">Cancel</a>
                </div>
                <div class="col-md-6">
                  <button type="submit" class="btn btn-lg btn-block btn-success" style="margin:5px;">Create</button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
      <!-- </div>
      </div> -->
    </div>
    </div>
  </body>

  <%- include('footer')%>